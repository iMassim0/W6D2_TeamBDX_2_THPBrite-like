<h1>Index des events</h1>

<% if user_signed_in? %>
  <div class="d-flex justify-content-center">
    <div class="d-flex align-items-center">
      <p>Voici les évènements auquel tu participes : </p>
</div>
</div>
  <div class="d-flex justify-content-center ">
    <div class="container">
      <h4>Upcoming events :</h4>
  <% @upcoming.each_with_index do |event, i| %>
      <div class="form-group border border-muted">
        <p><%= event.creator.username %></p>
        <p><%= event.description %></p>
        <p><%= event.date %></p>
        <p><%= event.place %></p>
        <%= link_to "Plus d'infos", event_path(event.id), class: "btn btn-outline-secondary" %>
      </div>
    <% end %>
    </div>
  </div>
  <div class="container">
    <h4>Past events :</h4>
      <% @past.each_with_index do |event, i| %>
        <div class="form-group border border-muted">
          <p><%= event.description %></p>
          <p><%= event.date %></p>
          <p><%= event.place %></p>
          <%= link_to "Plus d'infos", event_path(event.id), class: "btn btn-outline-secondary" %>
        </div>
    <% end %>
  </div>
  <%= link_to "Créer un évènement", new_event_path, class: "btn btn-warning" %>
<% else %>
<br>
<h1>Connectez-vous svp</h1>
<% end %>
