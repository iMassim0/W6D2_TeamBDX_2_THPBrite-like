<h1>Events#new</h1>

<%= form_for @event, url: {action: "create"} do |u| %>
<div class="form-group">
    <%= u.label "Description de l'event :" %><br>
    <%= u.text_area :description %><br>
</div>
<div class="form-group">
    <%= u.label "Date :" %><br>
    <%= u.date_field :date, class: "form-control" %><br>
</div>
<div class="form-group">
    <%= u.label "Lieu :" %><br>
    <%= u.text_field :place %><br>
</div>
<div class="form-group">
    <button type=submit class="btn btn-primary">Cr√©er le nouvel event !</button>
</div>

<% end %>
